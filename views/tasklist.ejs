<div class="tasklist">
    <%- include('partials/header')%>
<%- include('partials/nav')%>

<table class="table table-striped table-hover w-75 container mt-5">
    <h1 class="container text-center mt-3">task-list</h1>
    <thead>
        <tr class="tr">
            <th scope="col">S.no</th>
            <th scope="col">Task-title</th>
            <th scope="col">Task-details</th>
            <th scope="col">Due-date</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>

    <tbody>
        <% let i = 1 %>
        <% dets.forEach(task => { %>
<tr>
    <td><%= i++ %></td>
    <td><%= task.task %></td>
    <td><%= task.details %></td>
    <td><%= task.datetask %></td>
    <td><a class="text-decoration-none" href="/updatetask/<%= task._id%>">✏️</a></td>
    <td><a class="text-decoration-none" href="/delete/<%= task._id%>">❌</a></td>
</tr>
       <% })%>
    </tbody>

</table>

<button class="btn btn-danger m-auto"><a class="text-decoration-none text-white" href="/createtask">Create task</a></button>

<%- include('partials/footer.ejs')%>

</div>